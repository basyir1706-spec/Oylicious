    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            
            const navLinksContainer = document.querySelector(".nav-links");
            const allPages = document.querySelectorAll(".page-content");
            const allNavLinks = document.querySelectorAll(".nav-links .nav-link");
            
            navLinksContainer.addEventListener("click", function(e) {
                e.preventDefault();
                const clickedLink = e.target;
                
                if (clickedLink.tagName === 'A') {
                    const targetPageId = clickedLink.getAttribute("data-target-page");
                    const targetPage = document.getElementById(targetPageId);
                    
                    allPages.forEach(page => page.style.display = "none");
                    if (targetPage) {
                        targetPage.style.display = "block";
                    }
                    
                    allNavLinks.forEach(link => link.classList.remove("active"));
                    clickedLink.classList.add("active");
                }
            });

            const brandLogo = document.querySelector(".navbar-brand");
            brandLogo.addEventListener("click", function(e) {
                e.preventDefault();
                const targetPageId = brandLogo.getAttribute("data-target-page");
                const targetPage = document.getElementById(targetPageId);

                allPages.forEach(page => page.style.display = "none");
                if (targetPage) {
                    targetPage.style.display = "block";
                }

                allNavLinks.forEach(link => link.classList.remove("active"));
                document.querySelector('.nav-links a[data-target-page="home-content"]').classList.add("active");
            });

        });
    </script>
</body>
